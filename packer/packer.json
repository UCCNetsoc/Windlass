{
  "builders": [
    {
      "type": "lxd",
      "name": "windlass",
      "image": "ubuntu-minimal:83024b7d9105",
      "output_image": "windlass",
      "init_sleep": "5",
      "publish_properties": {
        "description": "LXD image for UCC Netsoc Windlass",
        "architecture": "amd64",
        "version": "0.0.1"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./packer/packer-setup.sh"
    },
    {
      "type": "file",
      "source": "./packer/resources/nginx.conf",
      "destination": "/etc/nginx/nginx.conf"
    },
    {
        "type": "shell",
        "script": "./packer/packer-cleanup.sh"
    }
  ],
  "post-processors": [
    {
      "type": "shell-local",
      "inline": [
        "lxc image copy windlass netsoc: --public"
      ]
    }
  ]
}