{
  "builders": [
    {
      "type": "lxd",
      "name": "windlass",
      "image": "ubuntu:18.04",
      "output_image": "windlass",
      "publish_properties": {
        "description": "Alpine 3.8 image for UCC Netsoc Windlass",
        "architecture": "amd64",
        "version": "0.0.1"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 5",
        "apt update",
        "apt install openssh sudo nano",
        "systemctl enable sshd",
        "systemctl start sshd",
        "echo 'PermitRootLogin yes' >> /etc/ssh/sshd_config",
        "/etc/init.d/sshd restart",
        "echo root:sample_text | chpasswd"
      ]
    }
  ]
}