{
  "builders": [
    {
      "type": "lxd",
      "name": "windlass",
      "image": "images:alpine/3.10",
      "output_image": "windlass",
      "publish_properties": {
        "description": "Alpine 3.10 image for UCC Netsoc Windlass",
        "architecture": "amd64",
        "version": "0.0.1"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 5",
        "apk update",
        "apk add openssh sudo nano",
        "rc-update add sshd",
        "/etc/init.d/sshd start",
        "echo 'PermitRootLogin yes' >> /etc/ssh/sshd_config",
        "/etc/init.d/sshd restart",
        "echo root:sample_text | chpasswd"
      ]
    }
  ]
}